@model EmployeeViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="IndexPost">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Employee.FirstName" class="control-label"></label>
                <input asp-for="@Model.Employee.FirstName" class="form-control" />
                <span asp-validation-for="@Model.Employee.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Employee.LastName" class="control-label"></label>
                <input asp-for="@Model.Employee.LastName" class="form-control" />
                <span asp-validation-for="@Model.Employee.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Employee.Address" class="control-label"></label>
                <input asp-for="@Model.Employee.Address" class="form-control" />
                <span asp-validation-for="@Model.Employee.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Employee.Id" />
                <input type="hidden" asp-for="@Model.Operation" />
                @if (Model.Employee == null || Model.Operation == "Insert")
                {
                    <input type="submit" value="Insert" class="btn btn-primary" />
                }
                else if (Model.Operation == "Update")
                {
                    <input type="submit" value="Update" class="btn btn-primary" />
                }
                else if (Model.Operation == "Delete")
                {
                    <input type="submit" value="Delete" class="btn btn-primary" />
                }
                else if (Model.Operation == "Details")
                {
                    <input type="submit" value="Cancel" class="btn btn-primary" />
                }
            </div>
        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Employees)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    <a asp-action="Index" asp-route-id="@item.Id" asp-route-operation="Update">Edit</a> |
                    <a asp-action="Index" asp-route-id="@item.Id" asp-route-operation="Details">Details</a> |
                    <a asp-action="Index" asp-route-id="@item.Id" asp-route-operation="Delete">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
